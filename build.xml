<project default="jar" basedir="." name="Spring Oddball">

	<!-- =================================================================== -->
	<!-- Initialization target                                               -->
	<!-- =================================================================== -->
	<target name="init">

		<tstamp/>


		<!-- =================================================================== -->
		<!-- Properties                                                          -->
		<!-- =================================================================== -->

		<property name="Name"     value="Spring Oddball"/>
		<property name="name"     value="oj-spring"/>
		<property name="version" value="0.1.0"/>
		<property name="build.postfix"  value=""/>
		<property name="build.version"  value="${version}${build.postfix}"/>

		<property name="oddjob.src"          value="../oddjob"/>
		<property name="oddjob.home"          value="../oddjob"/>
		
		<echo message="--------------------------------------------------------------"/>
		<echo message="            ${Name} ${build.version}                                "/>
		<echo message="--------------------------------------------------------------"/>
		<echo message="Building with ${ant.version}"/>
		<echo message="using build file ${ant.file}"/>
		<echo message="oddjob.src is ${oddjob.src}"/>
		<echo message="oddjob.home is ${oddjob.home}"/>
		<echo message="--------------------------------------------------------------"/>

		<property name="debug"          value="on"/>
		<property name="optimize"       value="off"/>
		<property name="deprecation"    value="off"/>
		<property name="nowarn"         value="on"/>
		<!-- <property name="build.compiler" value="classic"/> -->

		<property name="src.dir"      value="./src"/>
		<property name="java.dir"     value="${src.dir}/java"/>
		<property name="test.dir"     value="./test"/>
		<property name="test.src"     value="${test.dir}/java"/>
		<property name="work.dir"     value="./work"/>
		<property name="lib.dir"      value="./lib"/>
		<property name="examples.dir"  value="./examples"/>
		<property name="examples.src"  value="${examples.dir}/java"/>


		<property name="build.dir"      value="./build"/>
		<property name="build.src"      value="${build.dir}/src"/>
		<property name="build.test"      value="${build.dir}/test"/>
		<property name="build.classes"     value="${build.dir}/classes"/>
		<property name="build.lib"     value="${build.dir}/lib"/>
		<property name="build.examples" value="${examples.dir}/classes"/>

		<property name="test.reports" value="${build.test}/reports"/>
		
		<property name="jar.name"       value="${name}-${build.version}.jar"/>

		<filter token="Name"    value="${Name}"/>
		<filter token="name"    value="${name}"/>
		<filter token="version" value="${build.version}"/>
		<filter token="date"    value="${TODAY}"/>
		<filter token="log"     value="true"/>
		<filter token="verbose" value="true"/>
		<filter token="reference" value="../reference"/>
		<filter token="javadoc" value="../api"/>
		<filter token="userguide" value="../userguide"/>
		<filter token="devguide" value="../devguide"/>

		<!-- =================================================================== -->
		<!-- Identify Classpath                                                 -->
		<!-- =================================================================== -->

		<path id="classpath">
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset file="${oddjob.src}/run-oddjob.jar"/>
			<fileset dir="${oddjob.src}/lib">
				<include name="*.jar"/>
			</fileset>
		</path>

		<path id="test-classpath">
			<path refid="classpath"/>
			<pathelement location="${build.classes}" />
			<pathelement location="${build.examples}" />
			<pathelement location="${oddjob.src}/build/test"/>
			<fileset dir="${oddjob.src}/opt/lib">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${oddjob.src}/test/lib">
				<include name="*.jar"/>
			</fileset>
		</path>

	</target>

	<!-- =================================================================== -->
	<!-- Prepares the build directory                                        -->
	<!-- =================================================================== -->
	<target name="prepare" depends="init">

		<mkdir dir="${build.dir}"/>

	</target>

	<!-- =================================================================== -->
	<!-- Prepares the source code                                            -->
	<!-- =================================================================== -->

	<target name="prepare-src-main" depends="prepare">

		<mkdir dir="${build.src}"/>
		<mkdir dir="${build.classes}"/>
		<copy todir="${build.src}" filtering="on">
			<fileset dir="${java.dir}">
				<exclude name="**/*.gif"/>
				<exclude name="**/*.properties"/>
				<exclude name="**/*.xml"/>
			</fileset>
		</copy>
		<copy todir="${build.src}" filtering="off">
			<fileset dir="${java.dir}">
				<include name="**/*.gif"/>
				<include name="**/*.properties"/>
				<include name="**/*.xml"/>
			</fileset>
		</copy>
	</target>


	<!-- =================================================================== -->
	<!-- Compiles the source directory                                       -->
	<!-- =================================================================== -->
	<target name="compile" depends="prepare-src-main"
          description="Compiles the source code">

		<copy todir="${build.classes}">
			<fileset dir="${build.src}">
				<include name="**/*.gif"/>
				<include name="**/*.properties"/>
				<include name="**/*.xml"/>
			</fileset>
		</copy>

		<echo message="Compiling with Java ${ant.java.version}, debug ${debug}, optimize ${optimize}, deprecation ${deprecation}"/>

		<javac srcdir="${build.src}"
           destdir="${build.classes}"
           debug="${debug}"
           optimize="${optimize}"
           deprecation="${deprecation}"
           nowarn="${nowarn}">
			<classpath refid="classpath"/>
		</javac>
	</target>

	<!-- =================================================================== -->
	<!-- Creates the jar file                                                -->
	<!-- =================================================================== -->
	<target name="jar" depends="compile-tests" description="Generates the jar packages">
		
	    <jar destfile="${lib.dir}/${jar.name}"
	         basedir="${build.classes}">
	      <metainf dir="${build.dir}" includes="LICENSE.txt"/>
	    </jar>
		
	</target>

	<!-- =================================================================== -->
	<!-- Example targets                                                       -->
	<!-- =================================================================== -->

	<target name="compile-examples" depends="compile"
          description="Compiles the example code">

		<mkdir dir="${build.examples}"/>

		<echo message="Compiling Examples with Java ${ant.java.version}, debug ${debug}, optimize ${optimize}, deprecation ${deprecation}"/>

		<copy todir="${build.examples}" filtering="off">
			<fileset dir="${examples.src}">
				<include name="**/*.gif"/>
				<include name="**/*.properties"/>
				<include name="**/*.xml"/>
			</fileset>
		</copy>
		
		<javac srcdir="${examples.src}"
           destdir="${build.examples}"
           debug="${debug}"
           optimize="${optimize}"
           deprecation="${deprecation}"
           nowarn="${nowarn}">
			<classpath>
				<path refid="classpath"/>
				<pathelement location="${build.classes}"/>
			</classpath>
		</javac>

	</target>

	<!-- =================================================================== -->
	<!-- Test targets                                                       -->
	<!-- =================================================================== -->
	
	<target name="compile-tests" depends="compile-examples" description="Compile jUnit tests">
		<mkdir dir="${build.test}"/>

		<copy todir="${build.test}" filtering="off">
			<fileset dir="${test.src}">
				<include name="**/*.xml"/>
				<include name="**/*.properties"/>
			</fileset>
		</copy>
		
		<!-- Compile tests -->
		<javac srcdir="${test.src}"
            destdir="${build.test}"
            debug="${debug}"
            optimize="${optimize}"
            deprecation="${deprecation}">
			<classpath>
				<path refid="test-classpath"/>
			</classpath>
		</javac>

	</target>

	<target name="all-tests" depends="jar" description="Perform jUnit tests">
		<mkdir dir="${work.dir}"/>
		<mkdir dir="${test.reports}"/>
		
		<junit printsummary="yes" haltonfailure="no" 
				failureproperty="junit.failure" fork="yes">
			<classpath>
				<pathelement location="${build.test}" />
			</classpath>
			<classpath refid="test-classpath"/>
			<batchtest todir="${test.reports}">
				<fileset dir="${build.test}">
					<include name="**/test/*TestCase.class"/>
					<include name="**/*Test.class" />
					<exclude name="**/AllTest.class" />
					<exclude name="**/*$$*Test.class" />
				</fileset>
			</batchtest>
			<formatter type="xml"/>
			<sysproperty key="basedir" value="${basedir}"/>
			<sysproperty key="oddjob.home" value="${oddjob.home}"/>
			<sysproperty key="ant.file" value="${ant.file}"/>
		</junit>
		
		<junitreport todir="${test.reports}">
			<fileset dir="${test.reports}">
		    	<include name="TEST-*.xml"/>
			</fileset>
		    <report todir="${test.reports}"/>
		</junitreport>		
		
		<fail if="junit.failure" message="Unit test(s) failed. See reports in ${test.reports}."/>	
	</target>

	<target name="single-test" depends="jar" description="Single JUnit test">
		<mkdir dir="${work.dir}"/>
			
		<junit printsummary="yes" haltonfailure="yes" fork="yes">
			<sysproperty key="basedir" value="${basedir}"/>
			<classpath>
				<pathelement location="${build.test}" />
			</classpath>
			<classpath refid="test-classpath"/>
			<formatter type="plain" usefile="no" />
			<test name="${junit.test}"/>
			<sysproperty key="basedir" value="${basedir}"/>
			<sysproperty key="oddjob.home" value="${oddjob.home}"/>
			<sysproperty key="ant.file" value="${ant.file}"/>
		</junit>
	</target>
	
	<!-- =================================================================== -->
	<!-- Prepares the source distribution                                    -->
	<!-- =================================================================== -->
	<target name="dist-src" depends="init" if="dist.src.dir"
          description="Prepares the source distribution">

		<property name="to.dir"  value="${dist.src.dir}/${name}"/>

		<property name="to.lib" value="${to.dir}/lib"/>
		<property name="to.src" value="${to.dir}/src"/>
		<property name="to.test" value="${to.dir}/test"/>
		<property name="to.examples" value="${to.dir}/examples"/>
		
		<copy todir="${to.src}" filtering="off">
			<fileset dir="${src.dir}"/>
		</copy>

		<copy todir="${to.lib}">
			<fileset dir="${lib.dir}">
				<exclude name='${jar.name}'/>
			</fileset>
		</copy>

		<copy todir="${to.examples}">
			<fileset dir="${examples.dir}">
				<exclude name="classes"/>
				<exclude name="**/*.ser"/>
			</fileset>
		</copy>

		<copy todir="${to.test}">
			<fileset dir="${test.dir}">
				<exclude name="persist/**"/>
			</fileset>
		</copy>

		<copy todir="${to.dir}">
			<fileset dir=".">
				<include name="build.xml"/>
				<include name="LICENSE.txt"/>
				<include name="README.txt"/>
			</fileset>
		</copy>

	</target>

	<!-- =================================================================== -->
	<!-- Prepares the binary distribution                                    -->
	<!-- =================================================================== -->
	<target name="dist-bin" depends="jar" if="dist.bin.dir">
		
		<property name="to.dir" value="${dist.bin.dir}/opt/oddballs/${name}"/>
	
		<property name="to.lib" value="${to.dir}/lib"/>
		<property name="to.examples" value="${to.dir}/examples"/>
		
		<copy todir="${to.lib}">
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
		</copy>

		<copy todir="${to.examples}">
			<fileset dir="${examples.dir}">
				<exclude name="**/*.ser"/>
			</fileset>
		</copy>

		<copy todir="${to.dir}">
			<fileset dir=".">
				<include name="LICENSE.txt"/>
				<include name="README.txt"/>
			</fileset>
		</copy>
	</target>
	
	<!-- =================================================================== -->
	<!-- Maven Targets					                                     -->
	<!-- =================================================================== -->
		
	<target name="maven-install"
			description="Not yet implemented">
	</target>
	
    <target name="maven-deploy" 
    	description="Not yet implemented">
    </target>
	
	<target name="maven-stage" 
		description="Not yet implemented">
	</target>
	
	<!-- =================================================================== -->
	<!-- Clean targets                                                       -->
	<!-- =================================================================== -->
	
	<target name="clean" depends="init" description="Cleans the build directories">
		<delete dir="${build.dir}"/>
		<delete dir="${work.dir}"/>
		<delete dir="${build.examples}"/>
		<delete>
			<fileset dir="${lib.dir}">
			 <include name="${name}*.jar"/>
			</fileset>
		</delete>
	</target>

</project>

<!-- End of file -->
