<oddjob xmlns:spring='http://rgordon.co.uk/spring'>
	<job>
		<sequential>
			<jobs>
				<bean id='apple' class='org.oddjob.spring.Apple'
					colour='green'/>
				<spring:beans id='spring'>
					<resources>
						<list>
							<values>
								<value value='org/oddjob/spring/spring3.xml' />
							</values>
						</list>
					</resources>
				</spring:beans>
				<echo id='echo' text='${spring/snack.apple.colour}' />
			</jobs>
		</sequential>
	</job>
</oddjob>