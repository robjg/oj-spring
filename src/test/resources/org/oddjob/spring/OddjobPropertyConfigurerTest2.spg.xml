<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:property-placeholder location="classpath:org/oddjob/spring/OddjobPropertyConfigurerTest.properties" />

  <bean class="org.oddjob.spring.OddjobPropertyConfigurerTest$SomeBean">
    <property name="one" value="My favourite fruit is ${favourite.fruit}" />
    <property name="two" value="My favourite colour is ${favourite.colour}" />
  </bean>

</beans>
